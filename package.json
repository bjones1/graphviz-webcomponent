{
  "name": "graphviz-webcomponent",
  "version": "0.5.1",
  "description": "WebComponents for rendering a Graphviz graph and for editing its source script with syntax highlighting.",
  "author": "Ferdinand Prantl <prantlf@gmail.com> (http://prantlf.tk/)",
  "keywords": [
    "graphviz",
    "webcomponent",
    "web-component",
    "custom-element"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/graphviz-webcomponent.git"
  },
  "homepage": "https://github.com/prantlf/graphviz-webcomponent#readme",
  "bugs": "https://github.com/prantlf/graphviz-webcomponent/issues",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist",
    "src"
  ],
  "browser": "dist/index.min.js",
  "main": "dist/index.min.js",
  "module": "src/index.min.mjs",
  "exports": {
    "require": "./dist/index.min.js",
    "import": "./dist/index.min.mjs"
  },
  "scripts": {
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:prod": "rollup -c --environment NODE_ENV:production",
    "watch": "rollup -cw",
    "start": "http-server -p 5000",
    "check": "NODE_ENV=development jest",
    "coverage": "rm.js -f coverage/coverage-final.json && nyc report",
    "test": "npm run check && npm run coverage",
    "all": "npm run build:dev && npm test && denolint && npm run build:prod"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "maxWorkers": 4,
    "testMatch": [
      "<rootDir>/test/test-*.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/*.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "setupFilesAfterEnv": [
      "jest-puppeteer-istanbul/lib/setup"
    ],
    "reporters": [
      "default",
      "jest-puppeteer-istanbul/lib/reporter"
    ]
  },
  "nyc": {
    "exclude": [
      "src/codejar/*",
      "src/prism/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "tempDir": "coverage",
    "checkCoverage": true,
    "branches": 75,
    "functions": 90,
    "lines": 90,
    "statements": 90
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@hpcc-js/wasm": "2.3.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/git": "10.0.1",
    "@unixcompat/rm.js": "1.0.0",
    "denolint": "2.0.5",
    "http-server": "14.1.1",
    "jest-cli": "29.3.1",
    "jest-puppeteer": "6.2.0",
    "jest-puppeteer-istanbul": "0.5.3",
    "nyc": "15.1.0",
    "puppeteer": "19.4.0",
    "rollup": "3.7.4",
    "rollup-plugin-istanbul": "4.0.0",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-string": "3.0.0",
    "rollup-plugin-swc-minify": "1.0.5"
  }
}
